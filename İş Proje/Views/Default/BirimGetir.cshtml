@model İş_Proje.Models.Birim
@{
    ViewData["Title"] = "BirimGetir";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
@using (Html.BeginForm("BirimGuncelle", "Default", FormMethod.Post))
{
    <b>Başlık ID</b>
    @Html.TextAreaFor(x => x.BirimID, new { @class = "form-control" })
    <br />
   
    
    <b>Başlık Adı</b>
    @Html.TextAreaFor(x => x.BirimAd, new { @class = "form-control" })
    <br />

    <button class="btn btn-default" style="background-color:#ebdede;color:black;">Başlık Güncelle</button>


}

